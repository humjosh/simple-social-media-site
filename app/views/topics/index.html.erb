<div class="panel panel-default">
    <div class="panel-heading">Topics</div>
    <div class="panel-body">
        <table class="topics-table table-striped">
            <% @topics.each do |topic| %>
                <tr data-id="">
                    <td class="score-container">
                        <%= link_to :controller => "topics", :action => "upvote", :id => topic.id do %>
                            <span class="glyphicon glyphicon-arrow-up .upvote" aria-hidden="true"></span>
                        <% end %>
                        <div class="score">
                            <%= topic.score %>
                        </div>
                        <%= link_to :controller => "topics", :action => "downvote", :id => topic.id do %>
                            <span class="glyphicon glyphicon-arrow-down .downvote" aria-hidden="true"></span>
                        <% end %>
                    </td>
                    <td>
                        <%= topic.content %>
                        <%= link_to "Show more", topic_path(topic.id) %>                    
                    </td>
                </tr>
            <% end %>
        </table>
    </div>
</div>